{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':automergeMinor',
  ],
  labels: [
    'dependencies',
    'bot',
  ],
  platformAutomerge: true,
  automergeType: 'pr',
  automergeStrategy: 'squash',
  semanticCommits: 'enabled',
  commitMessageTopic: '{{depName}}',
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      labels: [
        'no-major',
      ],
      automerge: true,
    },
    {
      matchManagers: [
        'github-actions',
      ],
      semanticCommitType: 'ci',
      automerge: true,
    },
  ],
}
